pipeline {
    agent none
    stages {
		stage('Build') {
			stages {
				stage('Maven') {
					agent {
						docker { 
							image 'maven:latest' 
						}
					}
					steps {
						sh 'mvn --version'
					}
				}
				stage('NPM') {
					agent {
						docker { 
							image 'node:latest' 
						}
					}
					steps {
						sh 'npm --version'
					}
				}
			}
		}
	}
}
