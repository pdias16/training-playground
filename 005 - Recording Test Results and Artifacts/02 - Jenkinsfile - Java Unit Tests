pipeline {
    agent {
        docker {
            image 'maven:3.3.3'
        }
    }
    environment {
                POM_PATH = "005 - Recording Test Results and Artifacts/02 - Java Unit Tests/pom.xml"
            }
   stages {       
      stage('build'){
        steps{
             sh "mvn install -f '$POM_PATH' -Dmaven.test.skip=true"
       }
    }
        stage('tests') {
            steps {
          configFileProvider(
            [configFile(fileId: 'settings.xml', targetLocation:'copy.xml' )]) {
                    sh "mvn -s copy.xml -f '$POM_PATH' test"
                }
            }
        }
    }
}
