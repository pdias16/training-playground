pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage("First") {
		steps {
			writeToFile('file.txt')
			sh "sleep 10"
			writeToFile('file.txt')
			sh "sleep 10"
		}
	}
    }
}

def writeToFile(file) {
  touch "$file"
  "date > $file"
  "cat $file"
}
