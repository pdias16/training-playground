pipeline {
    agent { 
		dockerfile {
			dir '006 - Cleaning Up and Notifications'
			filename '03 - Dockerfile - Git Reset'
		}
	}
    stages {
        stage('prepare') {
            steps {
                sh "ls -lta"
    			sh "git clean -fd"
            }
        }
        stage('build') {
            steps {
                sh "ls -lta"
                sh "date > test"
                sh "ls -lta"
            }
        }
    }
}
