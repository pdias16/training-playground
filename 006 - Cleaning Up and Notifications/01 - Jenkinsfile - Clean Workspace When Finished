pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "ls -lta" #Command to list all files
                sh "date > test" #Creating a file
            }
        }
    }
    post { 
        always { 
            sh "ls -lta" #Command to list all files
            cleanWs() #Function to clean workspace	
            sh "ls -lta" #Command to list all files
        }
    }
}
