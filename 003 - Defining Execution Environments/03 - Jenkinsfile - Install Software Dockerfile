pipeline {
    agent { 
    	dockerfile {
			filename '03 - Dockerfile - Dockerfile Agent'
			dir '003 - Defining Execution Environments'
			args '-e ENV_VARIABLE="Value for execution"'
		}
	}
    stages {
        stage('build') {
            steps {        
                sh 'if [ "$ENV_VARIABLE" != "Value for execution" ]; then exit 1; fi'
            }
        }
    }
}
