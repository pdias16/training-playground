pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
    post {
    	always {
		echo 'Always'
	}
	success {
		echo 'Success'
	}
    	failure {
		echo 'Failure'
	}
    }
}
