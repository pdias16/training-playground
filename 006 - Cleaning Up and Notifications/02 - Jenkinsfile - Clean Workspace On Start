pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('prepare') {
            steps {
                sh "ls -lta"
	            cleanWs()
            }
        }
        stage('build') {
            steps {
                sh "ls -lta"
                sh "date > test"
                sh "ls -lta"
            }
        }
    }
}
