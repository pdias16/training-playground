pipeline {
    agent { 
    	dockerfile {
			filename '02 - Dockerfile - Dockerfile Agent'
			dir '003 - Defining Execution Environments'
			args '-e ENV_VARIABLE="Value for execution"
		}
	}
    stages {
        stage('build') {
            steps {
            	echo "Don't install curl here!"
                sh "curl www.google.com"
            }
        }
    }
}
