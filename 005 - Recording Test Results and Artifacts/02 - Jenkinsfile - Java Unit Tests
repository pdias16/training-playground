pipeline {
    agent { 
    	docker {
			image 'maven:latest'
		}
	}
    stages {
        stage('tests') {
            steps {
                configFileProvider([configFile(fileName: 'settings.xml', variable: 'MAVEN_SETTINGS')]) {
        		sh 'mvn -s $MAVEN_SETTINGS -Dtest=HelloWorldTest testGetText'
   			 }
		 }
        }
    }
}
