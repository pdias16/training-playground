pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('ask for name') {
		input {
			message "What is your name?"
			parameters {
				string(name: 'NAME', defaultValue: 'Mr Jenkins', description: 'Name')
			}
		}
		
            steps {
                echo "$NAME"
            }
        }
	stage('ask for age') {
		input {
			message "How old are you?"
			parameters {
				string(name: 'AGE', defaultValue: '20', description: 'Age')
			}
            	}
            steps {
                echo "$AGE"
            }
        }
    }
}
